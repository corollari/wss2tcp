{
  "compilerOptions": {
    "target": "es5",
    "strict": true,  
    "esModuleInterop": true,
    "skipLibCheck": true, 
    "outDir": "build",
    "forceConsistentCasingInFileNames": true,
    "declaration": true,
    "resolveJsonModule": true,
    "allowJs": true
  },
  "exclude": ["node_modules", "build"]
}
